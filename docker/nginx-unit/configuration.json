{
    "listeners": {
        "*:8080": {
            "pass": "routes/grr"
        },
	"*:9090": {
	    "pass": "routes/metrics"
  }
    },
    "routes": {
        "grr": [
            {
                "match": {
                    "uri": [
                        "*.php",
                        "*.php/*"
                    ]
                },

                "action": {
                    "pass": "applications/grr/direct"
                }
            },
            {
                "action": {
                    "share": "/var/www/$uri",
                    "fallback": {
                        "pass": "applications/grr/index"
                    }
                }
            }
        ],
        "metrics": [
	    {
                "match": {
                    "uri": [
                        "/metrics"
                    ]
                },
                "action": {
                    "pass": "applications/metrics"
                }
            }
        ]
    },

    "applications": {
        "grr": {
            "type": "php",
            "options": {
              "admin": {
                "variables_order": "EGPCS",
		"max_input_vars": "4666",
		"error_reporting": "E_ALL & ~E_NOTICE & ~E_STRICT & ~E_DEPRECATED"
              }
            },
            "targets": {
                "direct": {
                    "root": "/var/www/"
                },

                "index": {
                    "root": "/var/www/",
                    "script": "index.php"
                }
            }
        },
	"metrics": {
	  "type": "php",
	  "root": "/metrics/",
	  "script": "prometheus.php",
	  "environment": {
	    "control_socket": "/var/run/control.unit.sock"
	  }
    }
    }
}
